@using System.Configuration;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>UCF College of Business Administration - Test Management</title>
    <link rel="shortcut icon" href="@(new Uri(Request.Url, Url.Content("~/Images/favicon.ico")))" type="image/x-icon" />
    <link rel="stylesheet" href="http@(Request.IsSecureConnection ? "s" : string.Empty)://fonts.googleapis.com/css?family=PT+Sans">
    @Styles.Render("~/Css/Main")
    <link href="@BundleTable.Bundles.ResolveBundleUrl("~/Css/Print")" rel="stylesheet" media="print" />
    @Scripts.Render("~/Js/Scripts")
    @Scripts.Render("~/Js/Custom")
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <script id="ucfhb-script" src="//universityheader.ucf.edu/bar/js/university-header.js"></script>
    <div id="wrap">
        <header>
            <div class="container">
                <h1>@Html.ActionLink("College of Business Administration Test Management", "Index", "Home")</h1>
            </div>
        </header>
        <section>
            <div class="container">
                <div id="content">
                    @RenderBody()
                </div>
            </div>
        </section>
    </div>

    <footer>
        <div class="container">
            <p>
                <span class="hidden-xs">Copyright &copy; @DateTime.Today.Year</span> <a target="_blank" href="http://www.bus.ucf.edu">UCF College of Business Administration</a>
                <br /><a href="mailto:cbatech@bus.ucf.edu?Subject=Bug%20Submission">Experiencing issues?</a>
            </p>

            <a target="_blank" href="http://www.ucf.edu"><img src="https://www.coba.bus.ucf.edu/pass/Images/ucf-footer.png" alt="UCF Main Website" /></a>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
